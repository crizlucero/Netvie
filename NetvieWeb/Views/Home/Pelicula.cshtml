@model NetvieWeb.Models.Pelicula
@{
    ViewBag.Title = Model.TituloEsp;
}

@Styles.Render("~/Content/Novedades.css")
@Scripts.Render("~/Scripts/Novedades.js")

<body>
    <div>
        <iframe title="YouTube video player" class="youtube-player" type="text/html"
                width="640" height="390" src="http://www.youtube.com/embed/@Model.Url?autoplay=1"
                frameborder="0" allowFullScreen></iframe>
    </div>
    <h2>@Model.TituloEsp</h2>
    <h3>@Model.TituloOriginal</h3>
    <p>Descripci&oacute;n:</p>
    <p>@Model.Critica</p>
    <p>Staff:</p>
    <p>
        @foreach (NetvieWeb.Models.Persona persona in Model.Personas)
        {
            <ul>
                <li>@persona.Nombre @persona.Paterno @persona.Materno</li>
            </ul>
        }
    </p>
</body>
